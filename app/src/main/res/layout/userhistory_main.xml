<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorPrimaryAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".UserHistory">
    <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="100dp"
            android:layout_height="96dp"
            android:padding="10dp"
            android:scaleType="fitEnd"
            tools:ignore="ContentDescription" app:srcCompat="@drawable/ic_golf_ball"
            app:layout_constraintBottom_toTopOf="@+id/fragment_weather"
            android:layout_marginBottom="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/fragment_weather"
            android:layout_width="391dp"
            android:layout_height="79dp"
            android:text="Sports Advisor"
            android:textColor="@color/colorLightAccent"
            android:textAlignment="center" android:textIsSelectable="false" android:textSize="24sp"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_icon"
            android:layout_marginTop="40dp" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

    <ScrollView
            android:layout_width="391dp"
            android:layout_height="0dp"
            android:id="@+id/scroll"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintLeft_toLeftOf="@id/fragment_weather"
            app:layout_constraintRight_toRightOf="@id/fragment_weather"
            app:layout_constraintTop_toBottomOf="@+id/fragment_weather" android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="0.0">


        <TextView
                android:id="@+id/userHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightAccent"
                android:layout_gravity="left" android:textIsSelectable="false" android:textSize="24sp"
                android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_weather"
                android:layout_marginTop="40dp" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
        />

    </ScrollView>
    <Button
            android:onClick="userData"
            android:id="@+id/button"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_round"
            android:text="Generate User Data"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scroll"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    />
</androidx.constraintlayout.widget.ConstraintLayout>

